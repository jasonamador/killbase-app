<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
  <div class="container">
    <%- include('../partials/header') %>
    <h1>ASSASSIN PROFILE</h1>
    <div class="box">
      <div class="hidden red retired-indicator" id="retiredIndicator">
        <h1>SUCCESSFULLY RETIRED <%= name.toUpperCase() %></h1>
        <a id="undo" class="yellow" href="../assassins/<%= id %>">UNDO</a> | <a href="/assassins">OK</a>
      </div>
      <div class="hidden red deleted-indicator" id="deletedIndicator">
        <h1>SUCCESSFULLY DELETED <%= name.toUpperCase() %></h1>
        <a href="/assassins">OK</a>
      </div>
      <div class="flex">
        <div>
          <h2><%= name %></h2>
          <% if (photo_url) { %>
            <img src="<%- photo_url %>" width="200px" />
          <% } else { %>
            <img src="/img/avatar.png" width="200px" />
          <% } %>
          <div>
            <a id="assassinRetireLink" href="/assassins/<%= id %>/retire">RETIRE</a> | <a id="assassinDeleteLink" href="/assassins/<%= id %>">DELETE</a> | <a id="deleteLink" href="#">UPDATE</a>
          </div>
        </div>
        <div>
          <div class="assassin attribute">
            Code Name(s): <%= codenames.length > 0 ? codenames : 'none' %>
          </div>
          <div class="assassin attribute">
            Email: <%= email %>
          </div>
          <div class="assassin attribute">
            Weapon: <%= weapon %>
          </div>
          <div class="assassin attribute">
            Age: <%= age %>
          </div>
          <div class="assassin attribute">
            Price: $<%= price %>
          </div>
          <div class="assassin attribute">
            Rating: <%= rating %>
          </div>
          <div class="assassin attribute">
            Kills: <%= kills %>
          </div>
          <div class="assassin attribute">
            Status: <%= active ? 'ACTIVE' : 'RETIRED' %>
          </div>
        </div>
      </div>

    </div>
  </div>
</body>
</html>
