<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
  <div class="container">
    <%- include('../partials/header') %>
    <h1>New Contract</h1>
    <div class="box">
      <form id="createContractForm" action="/contracts" method="POST">
        <div class="flex">
          <div>
            <h2>Target</h2>
            <div class="target attribute">
              <label for="targetName">Name:</label>
              <input name="targetName" id="targetName" />
            </div>
            <div class="target attribute">
              <label for="targetPhotoURL">Photo URL:</label>
              <input name="targetPhotoURL" id="targetPhotoURL" />
            </div>
            <div class="target attribute">
              <label for="targetLocation">Location:</label>
              <input name="targetLocation" id="targetLocation" />
            </div>
            <div class="target attribute">
              <label for="targetSecurity">Security Level:</label>
              <input name="targetSecurity" id="targetSecurity" />
            </div>
          </div>
          <div>
            <h2>Client</h2>
            <div class="client attribute">
              <label for="clientName">Name: </label>
              <input name="clientName" id="clientName" />
            </div>
            <div class="client attribute">
              <label for="clientPhotoURL">Photo URL:</label>
              <input name="clientPhotoURL" id="clientPhotoURL" />
            </div>
            <div class="client attribute">
              <label for="budget">Budget: </label>
              <input name="budget" id="budget" />
            </div>
            <div>
              <input type="submit" value="Create" id="postNewContract"/>
            </div>
          </div>
        </div>
      </form>
    </div>

  </div>
</body>
</html>
