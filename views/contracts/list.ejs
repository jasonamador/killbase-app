<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
  <div class="container">
    <%- include('../partials/header') %>
    <h1>CONTRACTS</h1>
    <nav class="right">
      <a href="/contracts/incomplete">INCOMPLETE</a> |
      <a href="/contracts/complete">COMPLETE</a>
    </nav>
    <table>
      <thead>
        <tr>
          <th>Client</th>
          <th>Target</th>
          <th>Budget</th>
          <th>Status</th>
          <th>Completed By</th>
          <th>Assassins</th>
        </tr>
      </thead>
      <tbody>
        <% for (contract of contracts) { %>
          <tr>
            <td><a href=<%= `/contracts/${contract.id}` %>><%= contract.clientName %></a></td>
            <td><a href=<%= `/contracts/${contract.id}` %>><%= contract.targetName %></a></td>
            <td><a href=<%= `/contracts/${contract.id}` %>><%= contract.budget %></a></td>
            <td><a href=<%= `/contracts/${contract.id}` %>><%= contract.completed ? 'Completed' : 'Incomplete' %></a></td>
            <td><a href=<%= `/contracts/${contract.id}` %>><%= contract.completedBy %></a></td>
            <td><a href=<%= `/contracts/${contract.id}` %>>(assassins assigned)</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
