<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
  <div class="container">
    <%- include('../partials/header') %>
    <h1>CONTRACTS</h1>
    <nav class="right">
      <a href="contracts/incomplete">INCOMPLETE</a> |
      <a href="contracts/complete">COMPLETE</a>
    </nav>
    <table>
      <thead>
        <tr>
          <th>Client</th>
          <th>Target</th>
          <th>Budget</th>
          <th>Status</th>
          <th>Completed By</th>
          <th>Assassins</th>
        </tr>
      </thead>
      <tbody>
        <% for (contract of contracts) { %>
          <tr>
            <td><a href=<%= `clients/${contract.clientId}` %>><%= contract.clientName %></a></td>
            <td><a href=<%= `targets/${contract.targetId}` %>><%= contract.targetName %></a></td>
            <td><%= contract.budget %></td>
            <td><%= contract.completed ? 'Completed' : 'Incomplete' %></td>
            <td><%= contract.completedBy %></td>
            <td>(assassins assigned)</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
