<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body>
  <div class="container">
    <%- include('partials/header') %>
    <div class="box">
      <div class="hidden red deleted-indicator" id="deletedIndicator">
        <h1>SUCCESSFULLY DELETED <%= name.toUpperCase() %></h1>
        <a id="undo" class="yellow" href="../assassins/<%= hashed_id %>">UNDO</a> | <a href="/assassins">OK</a>
      </div>
      <div class="flex">
        <div>
          <h1><%= name %></h1>
          <div class="assassin attribute">
            Weapon: <%= weapon %>
          </div>
          <div class="assassin attribute">
            <h3>Email</h3>
            <%= contactInfo %>
          </div>
        </div>
        <div>
          <div class="assassin attribute">
            Code Name(s): <%= codeNames %>
          </div>
          <div class="assassin attribute">
            <h3>Price</h3>
            $<%= price %>
          </div>
          <div class="assassin attribute">
            <h3>Rating</h3>
            <%= rating %>
          </div>
          <div class="assassin attribute">
            <h3>Kills</h3>
            <%= kills %>
          </div>
          <div class="assassin attribute">
            <h3>Age</h3>
            <%= age %>
          </div>
        </div>
      </div>
      <a id="deleteLink" href="/assassins/<%= hashed_id %>" class="red">DELETE</a> | <a id="deleteLink" href="#" class="yellow">UPDATE</a>
    </div>
    <div class="menu">
      <a href="/assassins/">ASSASSINS</a> | <a href="/contracts">CONTRACTS</a>
    </div>
  </div>
</body>
</html>
